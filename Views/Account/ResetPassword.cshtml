@{
    Layout = null;
}
<head>
    <title>Reset Password</title>
    <link rel="stylesheet" href="~/css/ResetPassPage.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#resetPassForm").validate({
                rules: {
                    Username: {
                        required: true
                    }
                },
                messages: {
                    Username: {
                        required: "Username cannot be empty."
                    }
                },
                errorClass: "custom-error",
                submitHandler: function (form) {
                    form.submit();
                }
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <div class="column">
            <img src="../Assets/top-logo.png" class="backgroundimg" />
        </div>
        <div class="column">
            <div class="card">
                <h2 class="title">Forgot Password?</h2>
                <div class="sub-title-div">
                    <p class="sub-title">Enter your username to reset password</p>
                </div>
                <form class="form-group" method="post" id="resetPassForm" action="@Url.Action("ResetPassword", "Account")">
                    <input type="text" id="username" name="Username" class="input-fields" placeholder="Username" />
                    <div class="buttons">
                        <button class="submitBtn" type="submit">Submit</button>
                        <a class="submitBtn cancelBtn" href="@Url.Content("~/login")">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
